<section id="foods-index">
  <div class="add-new">
   <%= button_to "Add Food", new_food_path, method: :get %>
  </div>
  <% if @foods.exists? %>
  <table>
    <thead>
     <td>Food</td>
     <td>Measurement unit</td>
     <td>Unit price</td>
     <td>Action</td>
    </thead>

      <% @foods.each do |food| %>
      <tr>
        <td class="food-name"><%= link_to food.name ,food_path(food.id) %></td>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= button_to "Delete", food_path(food.id), method: :delete %></td>
      </tr>
      <% end %>

  </table>
   <% else %>
          <p>No Food Added yet</p> 
      <% end %>
  <div>
</div>
</section>